<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16sp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/sfondo_carbonio"
            android:orientation="vertical"

            />

        <TextView
            android:id="@+id/tvScoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/playerName"
            android:textColor="#ff531a"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScoreErrors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="16dp"
            android:text="@string/defaultErrors"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvScoreTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="16dp"
            android:text="@string/defaultTime"
            android:textColor="#ffff"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvScoreData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="215dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/dateInfo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvErrInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="16dp"
            android:text="@string/errorsInfo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvTimeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="16dp"
            android:text="@string/timeInfo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvScoreSh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="65dp"
            android:text="@string/scoreShow"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvRealScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="65dp"
            android:text="@string/default_score"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvIq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="65dp"
            android:text="@string/iq"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/ivAchStar1"
            android:layout_width="51dp"
            android:layout_height="49dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ach_star" />

        <ImageView
            android:id="@+id/ivAchStar3"
            android:layout_width="51dp"
            android:layout_height="49dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ach_star" />

        <ImageView
            android:id="@+id/ivAchStar2"
            android:layout_width="51dp"
            android:layout_height="49dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ach_star" />

        <ImageView
            android:id="@+id/ivBestPlayerITA"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="248dp"
            android:layout_marginTop="68dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/bestplayerita"
            tools:visibility="invisible" />

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>