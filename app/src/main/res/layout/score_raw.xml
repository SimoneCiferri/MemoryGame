<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16sp">



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/sfondo_carbonio"

            ></com.google.android.material.imageview.ShapeableImageView>


        <TextView
            android:id="@+id/tvScoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="@string/playerName"
            android:textColor="#ff531a"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvScoreErrors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="16dp"
            android:text="@string/defaultErrors"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tvScoreTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="245dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="16dp"
            android:text="@string/defaultTime"
            android:textColor="#ffff"
            android:textSize="24sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tvScoreData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/dateInfo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvErrInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="16dp"
            android:text="@string/errorsInfo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tvTimeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="16dp"
            android:text="@string/timeInfo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="italic"/>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>